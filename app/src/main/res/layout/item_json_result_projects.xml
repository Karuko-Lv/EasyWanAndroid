<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="5dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/result_author_name"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="作者名"
                    android:textSize="15dp"

                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/time_projects"
                    android:layout_width="130dp"
                    android:paddingTop="15dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="项目的发布时间"
                    android:textColor="#d3d3d3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <TextView
                        android:background="#FFCCDD"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:text="文章标题"
                        android:id="@+id/result_title_name"/>
                <TextView
                    android:id="@+id/result_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#FFDDCC"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:text="文章内容"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_line_gray_90"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>